<% content_for :title, "Colaborações" %>

<div class="line-break">
	<%= form_tag '/colab/index', data: { turbo: false } do %>

		<%= label_tag( :term, "Search for:" ) %>

		<%= text_field_tag(:term) %>

		<%= submit_tag("Search") %>

	<% end %>
</div>

<div>
	<button> Previous </button>

	<button> Página: <%= @search_page %> </button>

	<button> Next </button>
</div>

<nav>
	<% for result in @search_results %>
		<div>
			<p> <%= link_to result['title'], "/colab/#{result['path']}" %> <p>

			<p> <button> Autores: <%= "#{result['contributors']}" %> </button> </p>

			<p> <button> Tags:
				<%= begin "#{result['tags']}" rescue "Nenhuma tag" end %>
			</button> </p>
		</div>
	<% end %>
</nav>

<div>
	<button> Previous </button>

	<button> Página: <%= @search_page %> </button>

	<button> Next </button>
</div>
